@model ClarusBlogBoard.Models.ContentConsulting

@{
    ViewBag.Title = "Edit Consulting Content";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}

    <div id="heading" class="page-header">
        <h2>Edit Consulting</h2>
    </div>

