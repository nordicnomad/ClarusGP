        </div>

        <div class="editor-label">
            <h4>Slide 1 Content</h4>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ConsultingContent1)
            @Html.ValidationMessageFor(model => model.ConsultingContent1)
        </div>

        <div class="editor-label">
            <h4>Slide 1 Image</h4>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ConsultingImage1)
            @Html.ValidationMessageFor(model => model.ConsultingImage1)
        </div>

        <div class="editor-label">
            <h4>Slide 2 Title</h4>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ConsultingTitle2)
            @Html.ValidationMessageFor(model => model.ConsultingTitle2)
        </div>

        <div class="editor-label">
            <h4>Slide 2 Content</h4>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ConsultingContent2)
            @Html.ValidationMessageFor(model => model.ConsultingContent2)
        </div>

        <div class="editor-label">
            <h4>Slide 2 Image</h4>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ConsultingImage2)
