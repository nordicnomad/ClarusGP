@model ClarusBlogBoard.Models.ContentConsulting
@{
    ViewBag.Title = "Clarus Group Consulting";
}

<script>

    $(function () {
        $('#consult1').removeClass('right');
        $('#consult2').removeClass('right');
        $('#consult3').removeClass('right');

        $('span#consulting1').click(function () {
            $('#consult1').toggleClass('right');
            $('#consulting1').toggleClass('nav-dot-current');
        });
        $('span#consulting2').click(function () {
            $('#consult2').toggleClass('right');
            $('#consulting2').toggleClass('nav-dot-current');
        });
        $('span#consulting3').click(function () {
            $('#consult3').toggleClass('right');
            $('#consulting3').toggleClass('nav-dot-current');
        });
    });


</script>

<div class="main-container">

    <nav class="navbar" id="navbar" role="navigation">
        <div class="container">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand pull-left" href="@Url.Action("Index", "Home")">
                <img src="@Url.Content("~/Content/img/logo.png")" alt="Clarus Group Logo"/>Clarus Group</a>
            <div class="collapse nav-collapse navbar-responsive-collapse pull-right" id="dropyDowny">
                <ul class="nav nav-pills">
                    <li><a href="@Url.Action("Details", "About", new { id = 1 })">About</a></li>
                    <li><a href="@Url.Action("Details", "Project", new { id = 1 })">BPM</a></li>
                    <li><a href="@Url.Action("Details", "Security", new { id = 1 })">Security</a></li>
                    <li><a href="#consulting">Consulting</a></li>
                    <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                    @*<li><a href="@Url.Action("Blog", "BlogPost")">Blog</a></li>*@
                    <li><a href="@Url.Action("Jobs", "JobPost")">Careers</a></li>
                </ul>
            </div>
        </div>
    </nav>

    @*<div class="scrollPast3 hidden-xs hidden-sm"></div>*@

    <!-- Consulting -->
    <section class=" wrapper clearfix" id="consulting">

        <div class="consultingContain">
            <h2>Technology Consulting</h2>
            <hr />
            
            <div class="consultingInfo right" id="consult1">
                <a href="@Url.Action("Details", "Architecture", new { id = 1 })">
                <img class="consultingImg" src="@Url.Content("~/Content/img/" + @Html.DisplayFor(model => model.ConsultingImage1))" alt="imageName" />
                <h3>@Html.DisplayFor(model => model.ConsultingTitle1)</h3>
                <p class="whitespaced">@Html.DisplayFor(model => model.ConsultingContent2)</p>
                </a>
            </div>
            <div class="consultingInfo right" id="consult2">
                <a href="@Url.Action("Details", "Development", new { id = 1 })">
                <img class="consultingImg" src="@Url.Content("~/Content/img/" + @Html.DisplayFor(model => model.ConsultingImage2))" alt="imageName" />
                <h3>@Html.DisplayFor(model => model.ConsultingTitle2)</h3>
                <p class="whitespaced">@Html.DisplayFor(model => model.ConsultingContent2)</p>
                </a>
            </div>
            <div class="consultingInfo right" id="consult3">
                <a href="@Url.Action("Details", "Strategy", new { id = 1 })">
                <img class="consultingImg" src="@Url.Content("~/Content/img/" + @Html.DisplayFor(model => model.ConsultingImage3))" alt="imageName" />
                <h3>@Html.DisplayFor(model => model.ConsultingTitle3)</h3>
                <p class="whitespaced">@Html.DisplayFor(model => model.ConsultingContent3)</p>
                </a>
            </div>
            <nav id="dots" class="dots">
                <span id="consulting1" class="nav-dot-current"></span>
                <span id="consulting2" class="nav-dot-current"></span>
                <span id="consulting3" class="nav-dot-current"></span>
            </nav>
        </div>

    </section>
    <!-- #consulting -->

    @if (User.IsInRole("admin, superadmin"))
    {
        <div class="wrapper">
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.ConsultingID })
            </p>
        </div>   
    }


</div>
