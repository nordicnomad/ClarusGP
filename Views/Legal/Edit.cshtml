@model ClarusBlogBoard.Models.ContentLegal

@{
    ViewBag.Title = "Edit Legal Information";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}

    <div id="heading" class="page-header">
        <h2>Edit Legal Information</h2>
    </div>

