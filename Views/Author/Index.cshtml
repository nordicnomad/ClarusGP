@model IEnumerable<ClarusBlogBoard.Models.BlogAuthor>

@{
    ViewBag.Title = "Author List";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}

<div id="heading" class="page-header">
    <h2>Blog Author List</h2>
</div>

<p>
    @Html.ActionLink("Create New Author", "Create", null, new { @class="btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            AuthorName
        </th>
        <th>
            AuthorEmail
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AuthorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AuthorEmail)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AuthorID }, new { @class = "btn btn-xs btn-info" }) |
            @Html.ActionLink("Details", "Details", new { id=item.AuthorID }, new { @class = "btn btn-xs btn-primary" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AuthorID }, new { @class = "btn btn-xs btn-warning" })
        </td>
    </tr>
}

</table>
