@model ClarusBlogBoard.Models.ContentService

@{
    ViewBag.Title = "Edit Services";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}
<div id="heading" class="page-header">
    <h2>Edit Services</h2>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Services Content</legend>

        @Html.HiddenFor(model => model.ServicesID)

        <div class="editor-label">
            <h4>Services Title</h4>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ServicesTitle)
            @Html.ValidationMessageFor(model => model.ServicesTitle)
        </div>

        <div class="editor-label">
            <h4>Services Content</h4>
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.ServicesContent)
            @Html.ValidationMessageFor(model => model.ServicesContent)
        </div>

        <div class="editor-label">
            <h4>Services Image</h4>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ServicesImage)
            @Html.ValidationMessageFor(model => model.ServicesImage)
        </div>

        <p>
            <input type="submit" value="Save" class="btn btn-primary"/>
        </p>
    </fieldset>
}
