@model ClarusBlogBoard.Models.JobPost

@{
    ViewBag.Title = "Delete Job Post";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}

    <div id="heading" class="page-header">
        <h2>Delete Job Post #@Html.DisplayFor(model => model.JobID)</h2>
    </div>

<div class="col-lg-6 jobDeleteInfo">
<h3 class="deleteQuestion">Are you sure you want to delete this Job?</h3> 

    <div class="display-label"><strong>Job Title:</strong> @Html.DisplayFor(model => model.JobName)</div>

    <div class="display-label"><strong>JobDescription: </strong></div>
    <div class="display-field">
        <p class="whitespaced">@Html.DisplayFor(model => model.JobDescription)</p>
    </div>

    <div class="display-label"><strong>Date Posted:</strong> @Html.DisplayFor(model => model.DatePosted)</div>

    <div class="display-label"><strong>Closing Date:</strong> @Html.DisplayFor(model => model.ClosingDate)</div>

    <div class="display-label"><strong>Job Post Status:</strong> @Html.DisplayFor(model => model.JobPostStatus.JobPostStatusName)</div>

    <div class="display-label"><strong>Office Assigned:</strong> @Html.DisplayFor(model => model.OfficeAssigned.OfficeName)</div>

    <div class="display-label"><strong>LocationDescription:</strong> @Html.DisplayFor(model => model.LocationDescription)</div>

    <div class="display-label"><strong>JobCategory:</strong> @Html.DisplayFor(model => model.JobCategory.CategoryName)</div>

    <div class="display-label"><strong>Posted To Blog:</strong> @Html.DisplayFor(model => model.PostToBlog)</div>

    @using (Html.BeginForm()) {
        <p>
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            <a href="@Url.Action("Index", "JobPost")" class="btn btn-primary">Cancel</a>
        </p>
    }
</div>
    
